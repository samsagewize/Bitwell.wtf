generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Bitwell {
  id            Int       @id @unique @default(autoincrement())
  order_id      String    @unique
  inscription   String    @default("")
  status        String
  payment_addr  String
  ordinals_addr String
  price         Int
  name          String
  background    String
  punk          String
  wish          String
  minted        Boolean   @default(false)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @default(now())
}

model Discount {
  id            Int       @id @unique @default(autoincrement())
  ordinals_addr String    @unique
  coupons       Coupon[]
}

model Coupon {
  id            Int       @id @unique @default(autoincrement())
  discount      Float
  used          Boolean   @default(false)
  owner_id      Int
  owner         Discount  @relation(fields: [owner_id], references: [id])
}
